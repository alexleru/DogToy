<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/imageSubItemList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/circle_image_background_subitem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSubItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/roboto"
        android:text="Поиск предметов"
        android:textSize="12sp"
        android:textColor="@color/blackLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageSubItemList"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCatalogue"
        style="@android:style/Widget.Button"
        android:layout_width="75dp"
        android:layout_height="21dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/round_corner_button"
        android:fontFamily="@font/roboto"
        android:text="Правила игры"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>